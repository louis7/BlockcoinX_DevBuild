<!DOCTYPE html>
<html lang="en">
<head>
	<title>Table V02</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
<!--===============================================================================================-->
	<link rel="icon" type="image/png" href="images/icons/favicon.ico"/>
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="vendor/bootstrap/css/bootstrap.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="fonts/font-awesome-4.7.0/css/font-awesome.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="vendor/animate/animate.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="vendor/select2/select2.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="vendor/perfect-scrollbar/perfect-scrollbar.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="css/util.css">
	<link rel="stylesheet" type="text/css" href="css/main.css">
<!--===============================================================================================-->
</head>
<body>

	<div class="limiter">
		<div class="wrap-table100">
				<div class="table">

					<div class="row">
						<div class="cell" "col-sm-5"><h1> Total Users: <%= @guest.count%> </h1>
						<div class="cell" "col-sm-7">
						<a href="#" class="btn"><i class="material-icons"></i> <span>Export to Excel</span></a>
						<a href="#" class="btn"><i class="material-icons"></i> <span>Add New User</span></a>
						 </div>
						</div>
					</div>
					</div>
				</div>
			</div>

		<div class="container-table100">
			<div class="wrap-table100">
					<div class="table">

						<div class="row header">
							<div class="cell">
								Full Name
							</div>
							<div class="cell">
								Email
							</div>
							<div class="cell">
									Phone 				</div>

						</div>

						<% @guest.each do|guest| %>
						    <div class="row">
						  	<div class="cell" data-title="Full Name">
								<%=	guest.first_name %> <%=	guest.last_name %>
							</div>
							<div class="cell" data-title="Email">
								<%=	guest.email %>
							</div>
							<div class="cell" data-title="Phone">
								<%=	guest.phone %>
							</div>
						</div>

           <% end %>

					</div>
			</div>
		</div>




<!--===============================================================================================-->
	<script src="vendor/jquery/jquery-3.2.1.min.js"></script>
<!--===============================================================================================-->
	<script src="vendor/bootstrap/js/popper.js"></script>
	<script src="vendor/bootstrap/js/bootstrap.min.js"></script>
<!--===============================================================================================-->
	<script src="vendor/select2/select2.min.js"></script>
<!--===============================================================================================-->
	<script src="js/main.js"></script>

</body>
</html>
